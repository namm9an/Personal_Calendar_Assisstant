# Application Settings
APP_NAME=Personal Calendar Assistant
ENVIRONMENT=development
DEBUG=True
LOG_LEVEL=INFO

# FastAPI Settings
API_HOST=0.0.0.0
API_PORT=8000
API_PREFIX=/api/v1

# Security
JWT_SECRET=your-jwt-secret-key-here
ACCESS_TOKEN_EXPIRE_MINUTES=60

# Database Settings
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password
POSTGRES_DB=calendar_assistant
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}

# Redis Settings
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_URL=redis://${REDIS_HOST}:${REDIS_PORT}/${REDIS_DB}

# Google OAuth Settings
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REDIRECT_URI=http://localhost:8000/auth/google/callback
GOOGLE_AUTH_SCOPES=https://www.googleapis.com/auth/calendar https://www.googleapis.com/auth/calendar.events

# Microsoft OAuth Settings
MICROSOFT_CLIENT_ID=your_microsoft_client_id
MICROSOFT_CLIENT_SECRET=your_microsoft_client_secret
MICROSOFT_TENANT_ID=your-microsoft-tenant-id
MICROSOFT_REDIRECT_URI=http://localhost:8000/auth/microsoft/callback
MS_AUTH_SCOPES=Calendars.ReadWrite User.Read

# Token Encryption
TOKEN_ENCRYPTION_KEY=your_token_encryption_key_here

# LLM Settings
GEMINI_API_KEY=your_gemini_api_key
DEFAULT_LLM_MODEL=gemini-pro
FALLBACK_LLM_MODEL=local-llama
FALLBACK_LLM_TYPE=openai
OPENAI_API_KEY=your_openai_api_key

# Working Hours (24-hour format)
DEFAULT_WORKING_HOURS_START=09:00
DEFAULT_WORKING_HOURS_END=17:00
DEFAULT_TIMEZONE=UTC

# Logging & Monitoring
ENABLE_PROMETHEUS=True
LOG_LEVEL=INFO
SECRET_KEY=your_secret_key_here
